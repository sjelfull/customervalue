{% import "_includes/forms" as forms %}

{% if not settings.showField %}
    <style>
        #{{ namespaceId }}-field {
            display: none;
        }
    </style>
{% endif %}

{{ forms.textField({
    id: id ~ 'value',
    class: 'nicetext',
    value: value,
    required: false,
    readonly: true,
}) }}
